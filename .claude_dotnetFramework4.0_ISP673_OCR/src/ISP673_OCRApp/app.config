<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="unity" type="Microsoft.Practices.Unity.Configuration.UnityConfigurationSection, Microsoft.Practices.Unity.Configuration" />
  </configSections>
  
  <!-- .NET Framework 4.0 Runtime Configuration -->
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0" />
  </startup>
  
  <!-- Connection Strings -->
  <connectionStrings>
    <add name="DefaultConnection" 
         connectionString="Data Source=.\SQLEXPRESS;Initial Catalog=BusinessDB;Integrated Security=True" 
         providerName="System.Data.SqlClient" />
    <add name="LegacyConnection" 
         connectionString="Data Source=LEGACY-SERVER;Initial Catalog=LegacyDB;User ID=sa;Password=password" 
         providerName="System.Data.SqlClient" />
  </connectionStrings>
  
  <!-- Application Settings -->
  <appSettings>
    <add key="WindowsXPCompatibilityMode" value="true" />
    <add key="MaxRetryCount" value="3" />
    <add key="DefaultTimeout" value="30000" />
    <add key="EnableLegacySupport" value="true" />
    <add key="ComComponentPath" value="C:\Program Files\LegacyComponents" />
    <add key="ActiveDirectoryDomain" value="COMPANY.LOCAL" />
    <add key="ApplicationName" value="Business Management System" />
    <add key="Version" value="1.0.0" />
  </appSettings>
  
  <!-- Unity DI Container Configuration -->
  <unity xmlns="http://schemas.microsoft.com/practices/2010/unity">
    <container>
      <!-- Services -->
      <register type="BusinessManagementApp.Services.ICustomerService" 
                mapTo="BusinessManagementApp.Services.CustomerService" />
      
      <!-- Repositories -->
      <register type="BusinessManagementApp.Data.ICustomerRepository" 
                mapTo="BusinessManagementApp.Data.CustomerRepository" />
      
      <!-- Infrastructure Services -->
      <register type="BusinessManagementApp.Infrastructure.LegacySystemService" />
      <register type="BusinessManagementApp.Infrastructure.ActiveDirectoryService" />
    </container>
  </unity>
  
  <!-- log4net Configuration -->
  <log4net>
    <!-- File Appender -->
    <appender name="FileAppender" type="log4net.Appender.FileAppender">
      <file value="logs\BusinessManagementApp.log" />
      <appendToFile value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger{1} - %message%newline" />
      </layout>
    </appender>
    
    <!-- Rolling File Appender -->
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="logs\BusinessManagementApp_" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyy-MM-dd'.log'" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger{1} - %message%newline" />
      </layout>
    </appender>
    
    <!-- Console Appender (for debugging) -->
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger{1} - %message%newline" />
      </layout>
    </appender>
    
    <!-- Error File Appender -->
    <appender name="ErrorFileAppender" type="log4net.Appender.FileAppender">
      <file value="logs\Errors.log" />
      <appendToFile value="true" />
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR" />
        <levelMax value="FATAL" />
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger{1} - %message%newline%exception" />
      </layout>
    </appender>
    
    <!-- Root Logger -->
    <root>
      <level value="INFO" />
      <appender-ref ref="RollingFileAppender" />
      <appender-ref ref="ErrorFileAppender" />
    </root>
    
    <!-- Application Specific Loggers -->
    <logger name="BusinessManagementApp">
      <level value="DEBUG" />
      <appender-ref ref="FileAppender" />
    </logger>
    
    <logger name="BusinessManagementApp.Infrastructure.LegacySystemService">
      <level value="WARN" />
      <appender-ref ref="FileAppender" />
    </logger>
    
  </log4net>
  
  <!-- System.Net Configuration for Windows XP/2003 Compatibility -->
  <system.net>
    <settings>
      <httpWebRequest useUnsafeHeaderParsing="false" maximumResponseHeadersLength="64" maximumErrorResponseLength="64" />
      <ipv6 enabled="false" />
    </settings>
    <defaultProxy enabled="true" useDefaultCredentials="true" />
  </system.net>
  
  <!-- Runtime Configuration -->
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.5.0.0" newVersion="4.5.0.0" />
      </dependentAssembly>
    </assemblyBinding>
    
    <!-- .NET Framework 4.0 Compatibility Settings -->
    <loadFromRemoteSources enabled="false" />
    <enforceFIPSPolicy enabled="false" />
    <legacyCorruptedStateExceptionsPolicy enabled="false" />
  </runtime>
  
</configuration>