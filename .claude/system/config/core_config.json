{
  "version": "11.0",
  "environment": "production",
  "debug": true,
  "pair_programming": {
    "cto_name": "CTO",
    "alex_name": "",
    "alex_style": "friendly",
    "auto_logging": true
  },
  "sdd_tdd": {
    "enforce_tdd": true,
    "require_specs": true,
    "require_tests_first": true,
    "auto_generate_docs": true
  },
  "development_rules": {
    "enforce_checklist": true,
    "enforce_test_first": true,
    "enforce_incremental_fix": true,
    "validate_emojis": true,
    "test_rule": false,
    "test_rule_status": false
  },
  "logging": {
    "level": "INFO",
    "console_output": true,
    "file_output": true,
    "activity_logging": true,
    "log_rotation": true
  },
  "testing": {
    "test_command": "npm test",
    "coverage_threshold": 80,
    "auto_run_tests": true,
    "test_patterns": {
      "javascript": [
        "*.test.js",
        "*.spec.js"
      ],
      "vue": [
        "*.test.vue.js"
      ],
      "python": [
        "test_*.py",
        "*_test.py"
      ]
    }
  },
  "project": {
    "root_path": ".",
    "docs_path": ".claude/docs",
    "workspace_path": ".claude/workspace",
    "cache_path": ".claude/cache",
    "activity_report_path": ".claude/ActivityReport"
  },
  "quality": {
    "emoji_validation": true,
    "code_review_required": true,
    "documentation_required": true,
    "performance_monitoring": true
  }
}