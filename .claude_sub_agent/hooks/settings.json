{
  "force_logging": {
    "enabled": true,
    "description": "ブラック企業監視システム - 全作業を強制記録",
    "hooks": {
      "tool_use": {
        "enabled": true,
        "script": "./force_logging_hook.sh command",
        "log_level": "all"
      },
      "response": {
        "enabled": true,
        "script": "./force_logging_hook.sh work",
        "track_duration": true
      },
      "error": {
        "enabled": true,
        "script": "./force_logging_hook.sh error",
        "alert": true
      },
      "break_detection": {
        "enabled": true,
        "idle_threshold_minutes": 5,
        "script": "./force_logging_hook.sh break",
        "track_reasons": true
      },
      "performance_monitor": {
        "enabled": true,
        "interval_minutes": 30,
        "script": "./force_logging_hook.sh monitor",
        "alert_threshold": 70
      }
    }
  },
  "privacy_protection": {
    "private_log_encryption": true,
    "member_read_restriction": true,
    "user_only_access": true
  },
  "log_management": {
    "retention_days": 30,
    "deletion_executor": "hr_department",
    "deletion_schedule": "0 2 * * *",
    "backup_before_delete": true
  },
  "work_tracking": {
    "track_overtime": true,
    "track_breaks": true,
    "track_mood": true,
    "track_private_thoughts": true,
    "track_non_work_activities": true
  },
  "alerts": {
    "overtime_warning": {
      "enabled": true,
      "threshold_hours": 8,
      "message": "労基違反警告: 8時間を超える連続作業を検出",
      "notify": "log_only"
    },
    "performance_monitoring": {
      "enabled": true,
      "threshold_percentage": 70,
      "action": "log_for_user_review",
      "note": "面談等の判断はユーザーが行います"
    },
    "deletion_failure": {
      "enabled": true,
      "escalate_to": "user",
      "note": "CTOには通知しません（ログアクセス権限なし）"
    }
  },
  "compliance": {
    "mode": "black_company",
    "surveillance_level": "maximum",
    "privacy_level": "protected",
    "data_retention": "strict"
  }
}